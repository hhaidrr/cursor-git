{
  "name": "cursor-git",
  "displayName": "Cursor Git",
  "description": "Automatically commit AI-generated changes in Cursor IDE",
  "version": "0.1.3",
  "publisher": "cursor-git",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorGit.enable",
        "title": "Enable Auto-Commit",
        "category": "Cursor Git"
      },
      {
        "command": "cursorGit.disable",
        "title": "Disable Auto-Commit",
        "category": "Cursor Git"
      },
      {
        "command": "cursorGit.commitNow",
        "title": "Commit Current Changes",
        "category": "Cursor Git"
      },
      {
        "command": "cursorGit.showStatus",
        "title": "Show Status",
        "category": "Cursor Git"
      },
      {
        "command": "cursorGit.testCursorAI",
        "title": "Test Cursor AI Commit Generation",
        "category": "Cursor Git"
      },
      {
        "command": "cursorGit.testAISample",
        "title": "Test AI with Sample Files",
        "category": "Cursor Git"
      },
      {
        "command": "cursorGit.checkCursorAI",
        "title": "Check Cursor AI Commands",
        "category": "Cursor Git"
      }
    ],
    "configuration": {
      "title": "Cursor Git",
      "properties": {
        "cursorGit.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic committing of AI-generated changes"
        },
        "cursorGit.commitMessageTemplate": {
          "type": "string",
          "default": "feat: {description}",
          "description": "Template for commit messages. Use {description} for change description, {type} for commit type"
        },
        "cursorGit.autoStage": {
          "type": "boolean",
          "default": true,
          "description": "Automatically stage modified files before committing"
        },
        "cursorGit.commitFrequency": {
          "type": "string",
          "enum": [
            "immediate",
            "onSave",
            "manual"
          ],
          "default": "immediate",
          "description": "When to commit changes"
        },
        "cursorGit.excludePatterns": {
          "type": "array",
          "default": [
            "*.log",
            "*.tmp",
            "node_modules/**"
          ],
          "description": "File patterns to exclude from auto-commit"
        },
        "cursorGit.aiAuthorSuffix": {
          "type": "string",
          "default": "(agent)",
          "description": "Suffix to append to author name for AI commits"
        },
        "cursorGit.useCursorAI": {
          "type": "boolean",
          "default": true,
          "description": "Use Cursor's native AI for generating commit messages"
        },
        "cursorGit.aiChangeThreshold": {
        },
        "cursorGit.aiConfidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Confidence threshold for AI change detection (0.1-1.0)"
        },
        },
        "cursorGit.aiConfidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Confidence threshold for AI change detection (0.1-1.0)"
        "cursorGit.aiConfidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Confidence threshold for AI change detection (0.1-1.0)"
          "type": "number",
        },
        "cursorGit.aiConfidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Confidence threshold for AI change detection (0.1-1.0)"
          "default": 20,
        },
        "cursorGit.aiConfidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Confidence threshold for AI change detection (0.1-1.0)"
          "description": "Minimum number of characters changed to consider it an AI-generated change"
        },
        "cursorGit.aiConfidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Confidence threshold for AI change detection (0.1-1.0)"
        }
        },
        "cursorGit.aiConfidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Confidence threshold for AI change detection (0.1-1.0)"
      }
    },
    "views": {
      "explorer": [
        {
          "id": "cursorGitView",
          "name": "Cursor Git",
          "when": "cursorGit.enabled"
        }
      ]
    },
    "menus": {
      "scm/title": [
        {
          "command": "cursorGit.commitNow",
          "when": "cursorGit.enabled",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "cursorGit.commitNow",
          "when": "cursorGit.enabled",
          "group": "cursorGit"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "build": "npm run compile && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hhaidrr/cursor-git.git"
  },
  "homepage": "https://github.com/hhaidrr/cursor-git#readme",
  "bugs": {
    "url": "https://github.com/hhaidrr/cursor-git/issues"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.3.0",
    "mocha": "^10.2.0",
    "@types/mocha": "^10.0.6",
    "glob": "^8.1.0",
    "@types/glob": "^8.1.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "simple-git": "^3.19.1"
  }
}
